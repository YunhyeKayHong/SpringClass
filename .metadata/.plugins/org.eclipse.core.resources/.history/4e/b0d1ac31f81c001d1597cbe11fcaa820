$(document).ready(function() {
	$('#img1').click(test1);
	$('#img2').click(test2);
	
});
function test1(){
	$(this).css('width') 		//100px 사이즈 확인
	let w = $(this).width(); 	//100
	let h = $(this).height(); 	//100
	$(this).css('width', w+10);
	$(this).css('height', h+10);	
	
}
//이미지 파일의 경로
